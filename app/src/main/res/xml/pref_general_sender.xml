<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="updatetimeinterval"
        android:title="Location update time interval"
        android:summary="in seconds"
        android:inputType="number"
        />

    <EditTextPreference
        android:key="mindistance"
        android:title="Minimum distance change for location update"
        android:summary="in meters"
        android:inputType="number"
        />

    <CheckBoxPreference
        android:key="sendviasms"
        android:title="Send data via SMS"
        android:defaultValue="false" />
  <!--      android:summary="this screen can be accessed via settings" -->

    <EditTextPreference
        android:key="receivingphone"
        android:title="Enter receiving phone"
        android:summary="in international standard"
        android:inputType="phone"
        android:maxLines="1"
        android:dependency="sendviasms"/>

    <EditTextPreference
        android:key="smssendinginterval"
        android:title="SMS sending interval in minutes"
        android:inputType="number"
        android:dependency="sendviasms"
        />

    <EditTextPreference
        android:key="smslength"
        android:title="Max number of SMS sent at once"
        android:summary="not available yet"
        android:inputType="number"
        android:dependency="sendviasms"
        />

    <CheckBoxPreference
        android:key="sendviafacebook"
        android:title="Send data via Facebook"
        android:summary="not available in this version"
        android:defaultValue="false" />
    <EditTextPreference
        android:key="fbname"
        android:title="Facebook name"
        android:dependency="sendviafacebook"
        />
    <EditTextPreference
        android:key="fbpwd"
        android:title="Facebook password"
        android:dependency="sendviafacebook"
        />

    <CheckBoxPreference
        android:key="sendviatwitter"
        android:title="Send data via Twitter"
        android:summary="not available in this version"
        android:defaultValue="false" />
    <EditTextPreference
        android:key="twname"
        android:title="Twitter name"
        android:dependency="sendviatwitter"
        />
    <EditTextPreference
        android:key="twpwd"
        android:title="Twitter password"
        android:summary="not available in this version"
        android:dependency="sendviatwitter"
        />

    <CheckBoxPreference
        android:key="dontshow_s"
        android:title="Do not show this screen again"
        android:summary="this screen can be accessed via settings"
        android:defaultValue="false" />

</PreferenceScreen>